<idea-plugin version="2">
    <name>CMD Support</name>
    <description>short description of the plugin</description>
    <version>1.0</version>
    <vendor>YourCompany</vendor>
    <idea-version since-build="8000"/>

    <application-components>
        <!-- Add your application components here -->
    </application-components>

    <project-components>
        <!-- Add your project components here -->
    </project-components>

    <actions>
        <!-- Add your actions here -->
        <action id="TestAction" class="ua.t3hnar.plugins.cmdsupport.TestAction" text="TestAction"
                description="TestAction">
            <add-to-group group-id="FileMenu" anchor="first"/>
        </action>
    </actions>

    <extensions defaultExtensionNs="com.intellij">
        <colorSettingsPage implementation="ua.t3hnar.plugins.cmdsupport.editor.highlighting.CmdColorSettingsPage"/>

        <fileTypeFactory id="cmdFileTypeFactory" implementation="ua.t3hnar.plugins.cmdsupport.file.CmdFileTypeFactory"/>

        <lang.syntaxHighlighterFactory
                implementationClass="ua.t3hnar.plugins.cmdsupport.editor.highlighting.CmdSyntaxHighlighterFactory"
                key="CMD"/>

        <lang.parserDefinition implementationClass="ua.t3hnar.plugins.cmdsupport.lang.parser.CmdParserDefinition"/>
    </extensions>
</idea-plugin>